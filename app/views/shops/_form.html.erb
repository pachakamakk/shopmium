<%= form_for @shop do |f| %>

  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@shop.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @shop.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
