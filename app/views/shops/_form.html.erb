  </p>

  <p>
    <%= f.label :longitude %><br>
    <%= f.number_field :longitude, :step => 'any' %>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>

  <p>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </p>

  <p>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </p>

  <p>
    <%= f.label :country_code %><br>
    <%= f.text_field :country_code %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
